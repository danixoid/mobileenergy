<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#009846"
    android:paddingBottom="128dp"
    android:paddingLeft="96dp"
    android:paddingRight="96dp"
    android:paddingTop="64dp"
    tools:context="kz.bapps.mobileenergy.SplashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_weight="3.6"
        android:layout_height="0dp"
        android:id="@+id/imageView"
        android:scaleType="fitStart"
        android:src="@drawable/logo" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_weight=".2">

        <ImageView
            android:id="@+id/imgGrad1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_1"/>

        <ImageView
            android:id="@+id/imgGrad2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/back_progress"/>

    </RelativeLayout>


</LinearLayout>
